@model AdminAndListProduct
@{
    Layout = "_LayoutForAdmin";
}
<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach (var item in Model.Products)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" width="auto" height="auto" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                            <p class="card-text">@item.Price</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Посмотреть больше</a>
                                    <a type="button" asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Редактировать</a>
                                    <a type="button" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Удалить</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</div>