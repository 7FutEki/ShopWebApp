@model ForAuth

@{
    Layout = "_LayoutFirst";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">

    <title>Signin Template for Bootstrap</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/sign-in/">

    <!-- Bootstrap core CSS -->
    <link href="../../dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="signin.css" rel="stylesheet">
</head>

<body class="text-center">
    <form class="form-signin" asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"/>
        <h1 class="h3 mb-3 font-weight-normal">Вход</h1>
        <div class="form-group">
        <input asp-for="Login" class="form-control" placeholder="Логин" required autofocus>
        <span asp-validation-for="Login" class="text-danger"/>
        </div>
        <div class="form-group">
        <input asp-for="Password" type="password" class="form-control" placeholder="Пароль" required>
        <span asp-validation-for="Password" class="text-danger"/>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
        <small>
           
        <a asp-controller="Home" asp-action="Register"  class="btn btn-sm btn-outline-secondary">Зарегистрироваться</a>
        </small>
    </form>
</body>
</html>
